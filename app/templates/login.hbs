<div class="container wrapper">
  <form class="form-signin" action="index.html" method="post">
    <h4 class="">Login</h4>
    <div class="form-group row">
      <input class="form-control" type="text" name="username" value="" placeholder="Your username">
    </div>
    <div class="form-group row">
      <input class="form-control" type="password" name="password" value="" placeholder="Your password">
    </div>
    <div class="form-group row">
      <input class="btn btn-primary btn-block btn-login" type="button" name="" value="Login">
    </div>
    <div class="">
      <p class="text-center small">Don't have an account?
        {{#link-to "register" tagName="p" }}<a href="">Sign up here</a>{{/link-to}}
      </p>
    </div>
  </form>
</div>

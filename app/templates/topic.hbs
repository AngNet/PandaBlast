<div class="container">
  <h3>{{model.title}}</h3>
  {{#each model.posts as |post|}}
    <div class="row post-container">
      <div class="post-user col-md-2">
        <p style="font-weight:bold">{{post.username}}</p>
        <p style="font-size:x-small">id:{{post.userId}}</p>
      </div>
      <div class="post-content col-md-10">
        <p>{{post.postContent}}</p>
      </div>
    </div>
  {{/each}}

  <button id="commentOnPost" type="button" class="btn btn-primary btn-lg btn-login" data-toggle="modal" data-target="#myModal" {{action 'saveComment'}}>Comment</button>
  <div class="container" style="display: none;">
    <!-- button to reply to any post -->
    <br>
    <h3>Comments here:</h3>

  </div>
    <!-- Modal window to add comments-->
    <div class="modal fade" id="myModal" role="dialog">
      <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Add comment</h4>
          </div>
          <div class="modal-body">
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  {{textarea id="myContent" value=message class="form-control" rows=5 placeholder="Please type your message here." autofocus="autofocus"}}
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <div class="col-md-12">
              <button id = "postOnThread" disabled= {{isDisabled}} class="btn btn-primary btn-lg btn-login" data-dismiss="modal" {{action 'saveComment'}}>Send message</button>
              <button type="button" class="btn btn-primary btn-lg btn-login" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
